<Window x:Class="WeighBridgeDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeighBridgeDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStyle="None"
        MouseDown="Window_MouseDown">
    <Grid>
        <StackPanel Orientation="Horizontal"  VerticalAlignment="Top">
            <Button Content="LoginPage" Margin="10,0,0,0" MinWidth="100" Click="Btn_LoginPage"/>

            <Button Content="Register Page" Margin="10,0,0,0" MinWidth="100" Click="btnRegisterPage"/>
            <Button Content="Landing Page" Margin="10,0,0,0" MinWidth="100" Click="btnLandingPage"/>
        </StackPanel>
        <!-- This project demonstrates Creating a multipages project -->
        <Frame x:Name="Main" Margin="0,35,0,0" NavigationUIVisibility="Hidden" />

    </Grid>
</Window>
